{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES6",
      "DOM"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "**/dist/*"
  ],
  "include": [
    "src/**/*"
  ]
}